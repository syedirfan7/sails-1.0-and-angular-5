<h1 class="display-4">Articles List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% articles.forEach(function(article){ %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td>
                    <form  clss="d-inline" action="/articles/delete/<%= article.id %>" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger"></form>
                    <form  clss="d-inline" action="/articles/edit/<%= article.id %>" method="post">
                    <input type="submit" value="Edit" class="btn btn-info"></form>
                </td>
            </tr>
         <% }) %>
     
    </tbody>
</table>

